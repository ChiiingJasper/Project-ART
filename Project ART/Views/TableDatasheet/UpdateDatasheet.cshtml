@model TableDatasheet
@{
    ViewData["Title"] = "UpdateDatasheet";
}


<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Update Datasheet</h1>
                            <hr />
                        </div>
                        <form class="user" method="post" asp-action="UpdateDatasheet">
                            <input asp-for="Data_Sheet_ID"  hidden>
                            <div class="form-group row">
                                <input asp-for="First_Name" type="text" class="form-control form-control-user"
                                       placeholder="First Name" required>
                            </div>
                            <div class="form-group row">
                                <input asp-for="Last_Name" type="text" class="form-control form-control-user"
                                       placeholder="Last Name" required>
                            </div>
                            <div class="form-group row">
                                <input asp-for="Middle_Initial" type="text" class="form-control form-control-user"
                                       placeholder="Middle Initial" required>
                            </div>
                            <div class="form-group row">
                                <input asp-for="Email" type="email" class="form-control form-control-user"
                                       placeholder="Email" required>
                            </div>

                            <div class="form-group row">
                                <input asp-for="Mobile_Number" type="text" class="form-control form-control-user"
                                       placeholder="Mobile Number" required>
                            </div>
                            <div class="form-group row">
                                <input asp-for="LinkedIn" type="text" class="form-control form-control-user"
                                       placeholder="LinkedIn" required>
                            </div>

                            <div class="form-group row">
                                <input asp-for="Position" type="text" class="form-control form-control-user"
                                       placeholder="Position" required>
                            </div>
                            
                            <hr>
                            <div class="form-group row">

                                <div class="col-sm-6 mb-3 mb-sm-0">

                                    <a asp-controller="TableDatasheet" asp-action="TableDatasheet"  class="btn btn-danger btn-user btn-block">
                                        Cancel
                                    </a>
                                </div>
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary btn-user btn-block">Update</button>
                                </div>
                            </div>
                            

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

