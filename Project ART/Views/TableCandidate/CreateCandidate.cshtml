@model TableCandidate
@{
    ViewData["Title"] = "CreateCandidate";
}


<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create Candidate</h1>
                            <hr />
                        </div>
                        <form class="user" method="post">
                            <div class="form-group row">
                                <input asp-for="Is_Hired" type="text" class="form-control form-control-user"
                                       placeholder="Is Hired" required>
                            </div>
                            <div class="form-group row">
                                <select asp-for="ApplicationID" asp-items="ViewBag.Applications" class="form-control form-control-user" required></select>
                            </div>
                            <div class="form-group row">
                                <select asp-for="AssessmentID" asp-items="ViewBag.Assessments" class="form-control form-control-user" required></select>
                            </div>
                            <div class="form-group row">
                                <select asp-for="CompanyID" asp-items="ViewBag.Users" class="form-control form-control-user" required></select>
                            </div>
                            
                            <hr>
                            <div class="form-group row">

                                <div class="col-sm-6 mb-3 mb-sm-0">

                                    <a asp-controller="TableCandidate" asp-action="TableCandidate" class="btn btn-danger btn-user btn-block">
                                        Cancel
                                    </a>
                                </div>
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary btn-user btn-block">Create</button>
                                </div>
                            </div>
                            

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

