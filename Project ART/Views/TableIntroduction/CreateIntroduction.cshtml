@model TableIntroduction
@{
    ViewData["Title"] = "CreateIntroduction";
}


<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create Introduction</h1>
                            <hr />
                        </div>
                        <form class="user" method="post">
                            <div class="form-group row">
                                <input asp-for="DISC_Trait" type="text" class="form-control form-control-user"
                                       placeholder="Disc Trait" required>
                            </div>
                            <div class="form-group row">
                                <input asp-for="Introduction_Video" type="text" class="form-control form-control-user"
                                       placeholder="Introduction Video" required>
                            </div>
                            <div class="form-group row">
                                <input asp-for="Introduction_Score" type="text" class="form-control form-control-user"
                                       placeholder="Introduction Score" required>
                            </div>
                            
                            <hr>
                            <div class="form-group row">

                                <div class="col-sm-6 mb-3 mb-sm-0">

                                    <a asp-controller="TableIntroduction" asp-action="Index" class="btn btn-danger btn-user btn-block">
                                        Cancel
                                    </a>
                                </div>
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary btn-user btn-block">Create</button>
                                </div>
                            </div>
                            

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

