@{
    ViewData["Title"] = "Upload Video";
}
<link rel="stylesheet" href="~/css/video.css" />
<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h3 mb-1 text-gray-800">Introduction</h1>
                            <video id="gum" playsinline autoplay muted></video>
                        </div>

                        <div class="text-center">
                            <button type="button" id="start" class="btn btn-primary">Start Camera</button>
                            <button type="button" id="record" class="btn btn-primary" disabled>Start Recording</button>
                            <button type="button" id="play" class="btn btn-primary" data-toggle="modal" data-target="#previewModal" disabled>Preview Video</button>
                            
                            <button type="button" id="stop" class="btn btn-primary">Stop Camera</button>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

      
  </div>
<!--Modal-->
<div class="modal fade" id="previewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Preview Introduction Video</h5>
            </div>
            <div class="modal-body"><video class="video-responsive" id="recorded" playsinline></video></div>
            <div class="modal-footer">
                <button id="download" class="btn btn-success" data-dismiss="modal">Submit</button>
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
<script src="~/js/video.js" asp-append-version="true" async></script>