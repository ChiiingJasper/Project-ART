@model TableFAQ
@{
    ViewData["Title"] = "CreateFAQ";
}


<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create FAQ</h1>
                            <hr />
                        </div>
                        <form class="user" method="post" asp-action="CreateFAQ">
                            <div class="form-group row">
                                <input asp-for="Question" type="text" class="form-control form-control-user"
                                       placeholder="Question" required>
                            </div>
                            <div class="form-group row">
                                <input asp-for="Answer" type="text" class="form-control form-control-user"
                                       placeholder="Answer" required>
                            </div>
                            <div class="form-group row">
                                <input asp-for="Email" type="text" class="form-control form-control-user"
                                       placeholder="Email" required>
                            </div>
                            <div class="form-group row">
                                <select  class="form-control select-form"
                                        placeholder="Email_Confirmed" required>
                                    <option selected disabled>----Confirmed----</option>
                                    <option value="True">True</option>
                                    <option value="False">False</option>
                                </select>
                            </div>
                            <div class="form-group row">
                                <select  asp-items="ViewBag.Answered" class="form-control  select-form" required></select>
                            </div>

                            <hr>
                            <div class="form-group row">

                                <div class="col-sm-6 mb-3 mb-sm-0">

                                    <a asp-controller="TableFAQ" asp-action="Index"  class="btn btn-danger btn-user btn-block">
                                        Cancel
                                    </a>
                                </div>
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary btn-user btn-block">Create</button>
                                </div>
                            </div>
                            

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



