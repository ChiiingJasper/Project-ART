@model dynamic
@{
    ViewData["Title"] = "Index";
}


<!-- DataTables Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col pt-2">
                <h3 class="m-0 font-weight-bold text-primary">Responsibility Table</h3>
            </div>

            <div class="col col-lg-2" align="right">
                <a asp-controller="TableResponsibility" asp-action="CreateResponsibility" class="btn btn-success btn-icon-split btn-lg">
                    <span class="icon text-white-50">
                        <i class="bi bi-plus-circle"></i>
                    </span>
                    <span class="text">Add</span>
                </a>
            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" >
                <thead>
                    <tr>
                        <th>Responsibility ID</th>
                        <th>Job Application ID</th>
                        <th>Responsibility</th>
                        <th>Description</th>


                        <th style="text-align:center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach(TableResponsibility obj in Model.Responsibility)
                    {
                        <tr>
                            <td>@obj.Responsibility_ID</td>
                            <td>@obj.Job_Application_ID</td>
                            <td>@obj.Responsibility</td>
                            <td>@obj.Description</td>

                            <td class="text-center">
                                <a asp-controller="TableResponsibility" asp-action="UpdateResponsibility" asp-route-id="@obj.Responsibility_ID"class="btn btn-info btn-block btn-sm">
                                    <i class="bi bi-pencil-square"></i>
                                    Update
                                </a>
                                <a data-toggle="modal" data-target="#deleteModal-@obj.Responsibility_ID" class="btn btn-danger btn-block btn-sm">
                                    <i class="bi bi-trash3"></i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                        
                        <!-- Delete Modal-->
                        <div class="modal fade" id="deleteModal-@obj.Responsibility_ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                         aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to Delete?</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">You will be deleting Responsibility Number @obj.Responsibility_ID</div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" type="button" data-dismiss="modal" >Cancel</button>
                                        <a class="btn btn-danger" asp-controller="TableResponsibility" asp-action="DeleteResponsibility" asp-route-id="@obj.Responsibility_ID">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>


                    }
                   

                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- LOG TABLE -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col pt-2">
                <h3 class="m-0 font-weight-bold text-primary">Log Table</h3>
            </div>

            <div class="col col-lg-2" align="right">
                <!--<a asp-controller="TableLog" asp-action="CreateLog" class="btn btn-success btn-icon-split btn-lg">
                    <span class="icon text-white-50">
                        <i class="bi bi-plus-circle"></i>
                    </span>
                    <span class="text">Add</span>
                </a>-->
            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" >
                <thead>
                    <tr>
                        <th>Log ID</th>
                        <th>Table ID</th>
                        <th>Table</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Updated By</th>


            

                        <th style="text-align:center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach(TableLog obj in Model.Log)
                    {
                        <tr>
                            <td>@obj.Log_ID</td>
                            <td>@obj.Table_ID</td>
                            <td>@obj.Table</td>
                            <td>@obj.Description</td>
                            <td>@obj.Date_Time</td>
                            <td>@obj.User_ID</td>
                            

                            <td class="text-center">
                                <a asp-controller="TableLog" asp-action="UpdateLog" asp-route-id="@obj.Log_ID"class="btn btn-info btn-block btn-sm">
                                    <i class="bi bi-pencil-square"></i>
                                    Update
                                </a>
                                <a data-toggle="modal" data-target="#deleteModal-@obj.Log_ID" class="btn btn-danger btn-block btn-sm">
                                    <i class="bi bi-trash3"></i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                        
                        <!-- Delete Modal-->
                        <div class="modal fade" id="deleteModal-@obj.Log_ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                         aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to Delete?</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">You will be deleting Log Number @obj.Log_ID</div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" type="button" data-dismiss="modal" >Cancel</button>
                                        <a class="btn btn-danger" asp-controller="TableLog" asp-action="DeleteLog" asp-route-id="@obj.Log_ID">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>


                    }
                   

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>

}