@model IEnumerable<TableCandidate>
@{
    ViewData["Title"] = "Rankings";
}

	<!-- Components Vendor Styles -->

<link href="~/css/Rankings.css" rel="stylesheet">
   <div class="main-content">

      <!-- Table -->

      <div class="row">

        <div class="col">
          <div class="card shadow">
            <div class="card-header border-0">
                    <h3 class="mb-0"> <i class="fas fa-crown mr-2"></i>Rankings</h3>
            </div>
            <div class="table-responsive">
              <table class="table align-items-center table-flush">
                <thead class="thead-light">
                  <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Job Application</th>
                    <th scope="col">Status</th>
                    <th scope="col">DISC Trait</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                    @foreach(var obj in Model)
                    {
                  <tr class="mb-5">         
                    <th scope="row">
                      <div class="media align-items-center">
                          <h4 class="mr-2">#1</h4>
                        <a href="#" class="avatar rounded-circle mr-3">

                                                <img alt="Image placeholder" src="~/CandidateUpload/Photos/@obj.Photo">
                        </a>
                        <div class="media-body">
                          <span class="mb-0 text-sm">@obj.Last_Name, @obj.First_Name @obj.Middle_Initital</span>
                        </div>
                      </div>
                    </th>
                               
                    <td>
                      Internship
                    </td>
                    <td>
                                    <span class="badge badge-dot mr-4" id="status">
                                        <i class="bg-warning" id="iconchange"></i> pending
                      </span>
                    </td>

                                <td>
                                    <span class="badge badge-dot mr-4">
                                        <i class="bg-success"></i> Dominance
                                    </span>
                                </td>
                   
                    <td class="text-right">
                      <div class="dropdown">
                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <i class="fas fa-ellipsis-v"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                          <a class="dropdown-item" id="approve">Approve</a>
                                            <a class="dropdown-item" data-toggle="modal" data-target="#resume_@obj.Candidate_ID">Resume</a>
                                                <a class="dropdown-item" data-toggle="modal" data-target="#video_@obj.Candidate_ID">Video</a>
                        </div>
                      </div>
                    </td>
                  </tr>
                                <!--Modal-->
                                <div class="modal fade" id="resume_@obj.Candidate_ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                                 aria-hidden="true">
                                    <div class="modal-dialog modal-xl" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Resume</h5>
                                            </div>
                                            <div class="modal-body">
                                                <iframe src="~/CandidateUpload/Resume/@(@obj.Candidate_ID+@obj.Last_Name+"_"+@obj.First_Name+".pdf")" width="100%" height="700px">
                                                </iframe>
                                            </div>
                                            <div class="modal-footer">
                                                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!--Modal-->
                                <div class="modal fade" id="video_@obj.Candidate_ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                                 aria-hidden="true">
                                    <div class="modal-dialog modal-xl" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Video</h5>
                                            </div>
                                            <div class="modal-body">
                                                <iframe src="~/CandidateUpload/Video/@(@obj.Candidate_ID+@obj.Last_Name+"_"+@obj.First_Name+".mp4")" width="100%" height="500px">
                                                </iframe>
                                            </div>
                                            <div class="modal-footer">
                                                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                     }
                 
                </tbody>
              </table>
            </div>
            <div class="card-footer py-4">
              <nav aria-label="...">
                <ul class="pagination justify-content-end mb-0">
                  <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">
                      <i class="fas fa-angle-left"></i>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>
                  <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                  </li>


                  <li class="page-item">
                    <a class="page-link" href="#">
                      <i class="fas fa-angle-right"></i>
                      <span class="sr-only">Next</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
      </div>





<script src="~/js/rankings.js"></script>