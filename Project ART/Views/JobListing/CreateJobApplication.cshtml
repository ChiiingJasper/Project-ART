
@{
    ViewData["Title"] = "Create Job Application";
}
<link rel="stylesheet" href="~/css/customstyle.css">
<link rel="stylesheet" href="~/css/font-awesome.min.css">



<div class="job_details_area">

   

    <div class="container">

        <div class="row">
            <div class="col-lg-8">
                <div class="job_details_header">
                    <div class="single_jobs white-bg d-flex justify-content-between">
                        <div class="jobs_left d-flex align-items-center">
                            <img class="thumb" src="~/img/ai.png" alt="">
                            
                               
                                    <h3>Job</h3>
                            
                            
                        </div>
                        <div class="jobs_right">
                        </div>
                    </div>
                </div>
                <div class="descript_wrap white-bg">
                    <div class="single_wrap">
                        <h4>Job description</h4>
                        <textarea id="w3review" name="w3review" class="form-control" rows="4">
At w3schools.com you will learn how to make a website. They offer free tutorials in all web development technologies.
</textarea>
                    </div>
                    <div class="single_wrap">
                        <h4>Responsibility</h4>
                        <ul>

                            <li class="text-dark">Responsibility</li>
                             
                                
                                    Description
                                
                            
                        </ul>

                    </div>
                    <div class="single_wrap">
                        <h4>Qualifications</h4>
                        <ul>
                           

                                <li>.Qualification</li>

                                    Description
                                
                            
                        </ul>
                    </div>
                    <div class="single_wrap">
                        <h4>Benefits</h4>
                        <ul>
                            


                                <li>Benefit</li>
                                
                                    Description
                         
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="job_sumary">
                    <div class="summery_header">
                        <h3>Job Summary</h3>
                    </div>
                    <div class="job_content">
                        <ul>
                          
                            <li>Date End: <span> JobApplication.Date_End</span></li>
                            <li>Vacancy: <span> JobApplication.Vacancy Positions</span></li>
                            <li>Salary: <span> JobApplication.Salary</span></li>
                            <li>Location: <span> JobApplication.City,  JobApplication.Province</span></li>
                            <li>Job Nature: <span>  JobApplication.Job_Nature</span></li>
                        </ul>
                    </div>

                </div>
                <div class="share_wrap d-flex">
                   
                    <div class="row">
                        <div class="col col-lg-6">
                            <a asp-controller="JobListing" asp-action="CreateJobApplication" class="btn btn-success btn-icon-split btn-lg">
                                <span class="icon text-white-50">
                                    <i class="bi bi-plus-circle"></i>
                                </span>
                                <span class="text">Create</span>
                            </a>
                        </div>

                        <div class="col col-lg-6">
                            <a asp-controller="JobListing" asp-action="Index" class="btn btn-danger btn-icon-split btn-lg">
                                <span class="icon text-white-50">
                                    <i class="bi bi-x-circle"></i>
                                </span>
                                <span class="text">Cancel</span>
                            </a>
                        </div>
                    </div>
                    
                    

                    

                </div>
            </div>

        </div>
    </div>
</div>


