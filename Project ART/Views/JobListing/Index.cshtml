@model IEnumerable<TableJobApplication>
@{
    ViewData["Title"] = "Job Listing";
}
<link href="~/css/JobListingStyle.css" rel="stylesheet">

<div class="card shadow m-5">
    <div class="card-header py-3">
        <div class="row">
            <div class="col pt-2">
                <h3 class="m-0 font-weight-bold text-primary">Job Listing</h3>
            </div>

            <div class="col col-lg-2" align="right">
                <a asp-controller="JobListing" asp-action="CreateJobApplication" class="btn btn-success btn-icon-split btn-lg">
                    <span class="icon text-white-50">
                        <i class="bi bi-plus-circle"></i>
                    </span>
                    <span class="text">Create</span>
                </a>



            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Jobs</th>

                    </tr>
                </thead>

                <tbody>

                    @foreach(var obj in Model)
                    {
                    <tr>
                        <td>


                    <div class="row-sm-6 m-1">
                        <!-- Dropdown Card Example -->
                        <div class="card shadow">
                            <!-- Card Header - Dropdown -->
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h3 class="m-0  text-dark">@obj.Job</h3>
                                <div class="dropdown no-arrow">
                                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                         aria-labelledby="dropdownMenuLink">
                                                <div class="dropdown-header">Action</div>
                                                    <a class="dropdown-item" asp-controller="JobListing" asp-action="ViewJobApplication" asp-route-id="@obj.Job_Application_ID">View</a>
                                                    @if (obj.Is_Open)
                                                    {
                                                        <a class="dropdown-item" href="#">Close</a>
                                                    }
                                                    else
                                                    {
                                                        <a class="dropdown-item" href="#">Open</a>
                                                    }
                                        
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item text-danger" href="#">Delete</a>
                                    </div>
                                </div>
                            </div>
                            <!-- Card Body -->
                            <div class="card-body">
                                        <div class="row justify-content-center mx-2">
                                    <div class="col-sm-2 align-self-center ">
                                                <img class="thumb" src="~/UploadedFiles/Photo/@obj.Icon" />
                                     </div>
                                            <div class="col-sm-3">
                                               
                                                <span class="font-weight-bold">Date Published:</span>
                                                    <p>@obj.Date_Published</p>
                                                <span class="font-weight-bold">Date End:</span>
                                                    <p> @obj.Date_End</p>
                                                
                                            </div>

                                            <div class="col-sm-3">
                                                <span class="font-weight-bold">Job Nature:</span>
                                                    <p>@obj.Job_Nature</p>
                                                <span class="font-weight-bold">Vancancy:</span>
                                                    <p> @obj.Vacancy</p>
                                                
                                            </div>

                                            <div class="col-sm-3">
                                                <span class="font-weight-bold">Salary:</span>
                                                    <p>@obj.Salary</p>
                                                <span class="font-weight-bold">Location:</span>
                                                    <p>@obj.Province, @obj.City</p>
                                                
                                            </div>

                                            <div class="col-sm-1 align-self-center" >
                                                @if(obj.Is_Open){
                                                        <h3 class="align-self-center"><span class="badge badge-primary">Open</span></h3>
                                                }else
                                                {
                                                        <h3 class="align-self-center"><span class="badge badge-danger">Close</span></h3>
                                                }
                                                
                                            </div>
                                            
                                </div>
                            </div>
                        </div>
                    </div>


                        </td>
                    </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>





@section Scripts {
    <!-- Page level plugins -->
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>

}